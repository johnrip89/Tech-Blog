<article class="post">
    <section class="section">
        <div class="container card">
            <div class="title">
                <a href="/post/{{id}}" target="_blank"><h2>{{title}}</h2></a>
            </div>
            <div class="meta">
                <div class="contents">
                    <p>{{content}}</p>
                </div>
                Created by {{user.username}}
                on {{format_date created_at}}
            </div>
        </div>
    </section>
</article>